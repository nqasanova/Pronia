@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-add-navbar" class="btn btn-secondary">Add new Navbar</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Navbar</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>URL</th>
                            <th>Order</th>
                            <th>Is Header?</th>
                            <th>Is Footer?</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var navbar in Model)
                        {
                            <tr>
                                <td>@navbar.Name</td>
                                <td>@navbar.URL</td>
                                <td>@navbar.Order</td>
                                <td>@navbar.IsHeader</td>
                                <td>@navbar.IsFooter</td>
                                <td class="text-end">
                                    <a asp-route="admin-update-navbar" asp-route-id="@navbar.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-delete-navbar" asp-route-id="@navbar.Id" id="navbar-form-@navbar.Id"></form>
                                    <button type="submit" form="navbar-form-@navbar.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>