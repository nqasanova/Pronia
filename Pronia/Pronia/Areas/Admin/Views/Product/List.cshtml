@model List<ListItemViewModel>

<div class="">
    <a asp-route="admin-product-add" target="_blank" class="btn btn-secondary">Add new Product</a>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Products</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Description</td>
                                <td>@product.Price</td>
                                <td class="text-end">
                                    <a asp-route="admin-product-update" asp-route-id="@product.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form class="d-none" method="POST" asp-route="admin-product-delete" asp-route-id="@product.Id" id="update-@product.Id">
                                    </form>
                                    <button type="submit" form="update-@product.Id"><i class="las la-trash-alt text-secondary font-16"></i></button>
                                    <a class="btn btn-primary" asp-route="admin-productimage-list" asp-route-productId="@product.Id">Product Image List</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>