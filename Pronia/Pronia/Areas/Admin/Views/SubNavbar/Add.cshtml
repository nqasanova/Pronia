@model AddViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Navbar</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-subnavbar-add" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Order</label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>URLs</label>
                            <select asp-for="URL" asp-items="@(new SelectList(Model.URLs, nameof(AddViewModel.URLViewModel.Path), nameof(AddViewModel.URLViewModel.Path)))" class="form-select">                            </select>
                            <span asp-validation-for="NavbarId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Navbars</label>
                            <select asp-for="NavbarId" asp-items="@(new SelectList(Model.Navbars, nameof(AddViewModel.NavbarViewModel.Id), nameof(AddViewModel.NavbarViewModel.Title)))" class="form-select">                            </select>
                            <span asp-validation-for="NavbarId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>