@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Pronia.Database.Models
@using Pronia.Areas.Client.ViewModels.Home.Index
@model IndexViewModel

@foreach (var product in Model.Products)
{
    <div class="col-xl-3 col-md-4 col-sm-6">
        <div class="product-item">
            <div class="product-img">
                <a asp-route="client-shoppage-index">
                    <img class="primary-img"
                         src="~/@product.ImageURL"
                         alt="Product Images" />
                    <img class="secondary-img"
                         src="~/@product.ImageURL"
                         alt="Product Images" />
                </a>
                <div class="product-add-action">
                    <ul>
                        <li>
                            <a href="wishlist.html"
                               data-tippy="Add to wishlist"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder">
                                <i class="pe-7s-like"></i>
                            </a>
                        </li>
                        <li class="quuickview-btn "
                            data-bs-toggle="modal"
                            data-bs-target="#quickModal">
                            <a class="show-product-modal bg-light" asp-route="product-modal" asp-route-id="@product.Id" data-toggle="modal" data-target="#quickModal"
                               data-tippy="Quickview"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder">
                                SHOW
                            </a>
                        </li>
                        <li>
                            <a class="add-product-to-basket-btn" asp-route="client-basket-add" asp-route-id="@product.Id"
                               data-tippy="Add to cart"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder">
                                ADD
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="product-content">
                <a class="product-name" href="shop.html">@product.Name</a>
                <div class="price-box pb-1">
                    <span class="new-price">@product.Price</span>
                </div>
                <div class="rating-box">
                    <ul>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}