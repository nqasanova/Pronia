@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Pronia.Areas.Client.ViewModels.ShopPage
@model List<CategoryListItemViewModel>

<h2 class="widgets-title mb-4">Categories</h2>
<ul class="widgets-category">
    <li>
        <a asp-route="client-shoppage-index">
            <i class="fa fa-chevron-right"></i>
            All <span>(@Model.Count())</span>
        </a>
    </li>
    @foreach (var item in Model)
    {
        <li>
            <a asp-route="client-shoppage-index" asp-route-categoryId="@item.Id">
                <i class="fa fa-chevron-right"></i>
                @item.Name
            </a>
        </li>
    }
</ul>